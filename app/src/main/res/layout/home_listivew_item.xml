<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="25dp"
  android:orientation="vertical">

  <android.support.v7.widget.CardView
    android:id="@+id/cv_cardview"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="150dp">

        <ImageView
          android:id="@+id/iv_img"
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:background="@drawable/homelink_dev"
          android:scaleType="centerInside" />

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/iv_img"
          android:gravity="center">

          <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="型号：R9S" />

          <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_gravity="center_horizontal"
            android:text="普打我除螨仪" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/tv_price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="$199" />

            <TextView
              android:id="@+id/tv_buy"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="/立即购买" />
          </LinearLayout>

        </RelativeLayout>

      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/tv_b_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="谷歌公司推出了一个" />

        <TextView
          android:id="@+id/tv_b_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_b_name"
          android:text="于大量数据展示的新控件RecylerView，可以用来代替传统的" />

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_b_info">

          <TextView
            android:id="@+id/tv_b_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥199" />

          <TextView
            android:id="@+id/tv_b_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="销量: 207" />

        </RelativeLayout>


      </RelativeLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>


</LinearLayout>
