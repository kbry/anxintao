<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  android:orientation="vertical"
  tools:context="android.com.anxintao.user.VerifyPhoneActivity">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@android:color/white">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="11.5dp"
      android:src="@drawable/fanhui" />

  </RelativeLayout>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="34dp"
    android:layout_marginTop="34dp"
    android:text="验证手机号"
    android:textColor="#FF333333"
    android:textSize="32sp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="34dp"
    android:layout_marginTop="2dp"
    android:text="为保证账户安全，请绑定本人手机号"
    android:textColor="#FF999999"
    android:textSize="14sp" />

  <EditText
    android:id="@+id/et_phone"
    android:background="@null"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="65dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="11位手机号码" />

  <View
    android:layout_width="match_parent"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginTop="12dp"
    android:layout_height="1dp"
    android:background="#33999999" />

  <RelativeLayout
    android:layout_marginTop="22dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
      android:id="@+id/et_verify_code"
      android:background="@null"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="四位" />


    <TextView
      android:layout_width="105dp"
      android:layout_height="35dp"
      android:layout_alignParentRight="true"
      android:text="获取验证码"
      android:gravity="center"
      android:background="@drawable/bg_red_verify_code"
      android:textColor="#FFF53C28"
      android:textSize="14dp" />

  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginTop="5dp"
    android:layout_height="1dp"
    android:background="#33999999" />

  <TextView
    android:layout_width="305dp"
    android:layout_height="45dp"
    android:layout_marginTop="60dp"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:text="下一步"
    android:textColor="#FFFFFFFF"
    android:background="@drawable/verify_code_next"
    android:textSize="14dp" />


</LinearLayout>
