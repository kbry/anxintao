<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">


  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="11.5dp"
      android:src="@drawable/fanhui" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="实时收益"
      android:textColor="#FF333333"
      android:textSize="18dp" />
  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="4px"
    android:background="#FFF4F4F4" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
      android:id="@+id/tv_sr"
      android:layout_width="wrap_content"
      android:layout_height="42dp"
      android:layout_weight="1"
      android:background="#ECC871"
      android:gravity="center"
      android:text="收入"
      android:textColor="@android:color/white"
      android:textSize="16dp" />

    <TextView
      android:id="@+id/tv_jm"
      android:layout_width="wrap_content"
      android:layout_height="42dp"
      android:layout_weight="1"
      android:background="@android:color/white"
      android:gravity="center"
      android:text="减免"
      android:textColor="#999999"
      android:textSize="16dp" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#FFF4F4F4" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
      android:id="@+id/rl_today"
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:layout_weight="1">

      <TextView
        android:id="@+id/tv_by_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="本日"
        android:textColor="#ECC871"
        android:textSize="14dp" />

      <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/tv_by_day"
        android:src="@drawable/oval_yellow" />

    </RelativeLayout>

    <View
      android:layout_width="1dp"
      android:layout_height="12dp"
      android:layout_gravity="center_vertical"
      android:background="#33999999" />

    <RelativeLayout
      android:id="@+id/rl_month"
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:layout_weight="1">

      <TextView
        android:id="@+id/tv_by_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="本月"
        android:textColor="#999999"
        android:textSize="14dp" />

      <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/tv_by_month"
        android:src="@drawable/oval_gray" />

    </RelativeLayout>

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#FFF4F4F4" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp" />

</LinearLayout>
