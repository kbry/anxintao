<android.com.anxintao.widget.ScrollviewNestedRecyclerview xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <include layout="@layout/home_top_header" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/cardview_light_background"
      android:orientation="horizontal">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热卖" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_list"
      android:layout_marginTop="25dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/cardview_light_background"
      android:layout_marginBottom="25dp"
      tools:context="android.com.anxintao.home.HomeFragment" />

  </LinearLayout>

</android.com.anxintao.widget.ScrollviewNestedRecyclerview>
