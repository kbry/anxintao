<android.com.anxintao.widget.ScrollviewNestedRecyclerview xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_below="@+id/rl_title"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.com.anxintao.store.StoreFragment">

    <RelativeLayout
      tools:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:background="@drawable/bg_top">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp">

        <ImageView
          android:id="@+id/iv_avatar"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_launcher" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_toRightOf="@+id/iv_avatar"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户姓名"
            android:textColor="#FF5A4215"
            android:textSize="13dp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_zxdz"
            android:gravity="center"
            android:text="真选店主"
            android:textColor="#FFFDE5AA"
            android:textSize="11dp" />
        </LinearLayout>


        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="5dp"
          android:layout_toLeftOf="@+id/id_jinru"
          android:src="@drawable/dian_icon" />

        <ImageView
          android:id="@+id/id_jinru"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="9.5dp"
          android:src="@drawable/jiru" />

      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_xssj"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="186"
            android:textColor="#FF5A4215"
            android:textSize="17sp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="日销售额"
            android:textColor="#FF5A4215"
            android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="420"
            android:textColor="#FF5A4215"
            android:textSize="17sp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="月销售额"
            android:textColor="#FF5A4215"
            android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="186"
            android:textColor="#FF5A4215"
            android:textSize="17sp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="月订单"
            android:textColor="#FF5A4215"
            android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13474"
            android:textColor="#FF5A4215"
            android:textSize="17sp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="待入账"
            android:textColor="#FF5A4215"
            android:textSize="12sp" />

        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>

    <LinearLayout
      tools:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="83.5dp"
      android:orientation="horizontal"
      android:weightSum="3">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_sjfx" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="数据分析"
          android:textColor="#FF333333"
          android:textSize="13dp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_sssy" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="实时收益"
          android:textColor="#FF333333"
          android:textSize="13dp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_wdkh" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="我的客户"
          android:textColor="#FF333333"
          android:textSize="13dp" />

      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="#FFF4F4F4" />

    <RelativeLayout
      tools:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="37dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="11dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="客户订单"
        android:textColor="#FF444444"
        android:textSize="14dp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_more"
        android:text="查看更多"
        android:textColor="#FF999999"
        android:textSize="11dp" />

      <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_ckdd_more" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF4F4F4" />

    </RelativeLayout>

    <LinearLayout
      tools:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="79dp"
      android:orientation="horizontal"
      android:weightSum="4">

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/iv_icon1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_dfk" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/iv_icon1"
          android:layout_marginRight="2dp"
          android:layout_marginTop="2dp"
          android:background="@drawable/oval_num_unread"
          android:gravity="center"
          android:text="1"
          android:textColor="#FFFFE29D"
          android:textSize="10dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/iv_icon1"
          android:text="待付款"
          android:textColor="#FF929292"
          android:textSize="12dp" />
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/iv_icon2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_dfh" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/iv_icon2"
          android:layout_marginRight="2dp"
          android:layout_marginTop="2dp"
          android:background="@drawable/oval_num_unread"
          android:gravity="center"
          android:text="1"
          android:textColor="#FFFFE29D"
          android:textSize="10dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/iv_icon2"
          android:text="待发货"
          android:textColor="#FF929292"
          android:textSize="12dp" />
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/iv_icon3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_dsh" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/iv_icon3"
          android:layout_marginRight="2dp"
          android:layout_marginTop="2dp"
          android:background="@drawable/oval_num_unread"
          android:gravity="center"
          android:text="1"
          android:textColor="#FFFFE29D"
          android:textSize="10dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/iv_icon3"
          android:text="待收货"
          android:textColor="#FF929292"
          android:textSize="12dp" />
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/iv_icon4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_dpj" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/iv_icon4"
          android:layout_marginRight="2dp"
          android:layout_marginTop="2dp"
          android:background="@drawable/oval_num_unread"
          android:gravity="center"
          android:text="1"
          android:textColor="#FFFFE29D"
          android:textSize="10dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/iv_icon4"
          android:text="待评价"
          android:textColor="#FF929292"
          android:textSize="12dp" />
      </RelativeLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#FFF4F4F4" />

    <LinearLayout
      tools:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="79dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:orientation="horizontal"
      android:weightSum="2">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_weight="1"
        android:background="@drawable/my_store_gray_price_rectangle"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_marginLeft="12.5dp"
          android:layout_marginRight="12.5dp"
          android:gravity="center_vertical">

          <View
            android:id="@+id/v_y"
            android:layout_width="4dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:background="#FFECC871" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/v_y"
            android:layout_weight="1"
            android:text="佣金总计"
            android:textColor="#FF333333"
            android:textSize="14dp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享赚钱"
            android:textColor="#FF666666"
            android:textSize="11dp" />

        </LinearLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="12.5dp"
          android:layout_marginRight="12.5dp"
          android:background="#0f999999" />

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="¥1042.00"
            android:textColor="#FF333333"
            android:textSize="18dp" />

        </RelativeLayout>


      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:background="@drawable/my_store_gray_price_rectangle"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_marginLeft="12.5dp"
          android:layout_marginRight="12.5dp"
          android:gravity="center_vertical">

          <View
            android:id="@+id/v_y1"
            android:layout_width="4dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:background="#FFECC871" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/v_y1"
            android:layout_weight="1"
            android:text="省钱总计"
            android:textColor="#FF333333"
            android:textSize="14dp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买省钱"
            android:textColor="#FF666666"
            android:textSize="11dp" />

        </LinearLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="12.5dp"
          android:layout_marginRight="12.5dp"
          android:background="#0f999999" />

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="¥624.00"
            android:textColor="#FF333333"
            android:textSize="18dp" />

        </RelativeLayout>


      </LinearLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="15dp"
      android:background="#FFF4F4F4" />

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/bg_fxxd">

      <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/huangguan" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/iv_left"
        android:orientation="vertical">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="分享小店"
          android:textColor="#FF6D4F17"
          android:textSize="14dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:text="分享小店，好友购买商品您赚佣金"
          android:textColor="#FF6D4F17"
          android:textSize="12dp" />
      </LinearLayout>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/iv_right"
        android:text="去分享"
        android:textColor="#FF6D4F17"
        android:textSize="11dp" />

      <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_arrow_fxxd" />

    </RelativeLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="20dp"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店主专享"
        android:textColor="#FF444444"
        android:textSize="16sp" />

      <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />


    </LinearLayout>
